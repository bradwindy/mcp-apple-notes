{
  "name": "mcp-apple-notes",
  "version": "1.1.0",
  "author": "Rafal Wilinski",
  "type": "module",
  "main": "index.ts",
  "description": "Semantic search and RAG over Apple Notes using local embeddings",
  "keywords": ["apple", "notes", "mcp", "search", "rag", "embeddings"],
  "license": "MIT",
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node --minify",
    "start": "bun index.ts",
    "purge-db": "rm -rf ~/.mcp-apple-notes",
    "test": "bun test",
    "pack": "zip -r mcp-apple-notes.mcpb manifest.json index.ts src/ node_modules/ package.json images/ README.md NotesMCPHelper.app -x '*.git*' -x '*/.DS_Store'"
  },
  "exports": {
    ".": "./index.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.8",
    "@huggingface/transformers": "^3.1.2",
    "@lancedb/lancedb": "^0.14.0",
    "@langchain/textsplitters": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "better-sqlite3": "^11.6.0",
    "pako": "^2.1.0",
    "run-jxa": "^3.0.0",
    "turndown": "^7.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/pako": "^2.0.3",
    "@types/turndown": "^5.0.5"
  }
}
